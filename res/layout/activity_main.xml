<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <com.wdh.threes.view.TitleView
        android:id="@+id/mTitleView"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.wdh.threes.view.TitleView>
    <!--
         <Button 
        android:id="@+id/netbtn"
        android:text="网络连接"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    -->

    <LinearLayout
        android:id="@+id/com_lin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zhanghaotext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账号"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/zhanghaoedit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:hint="请输入账号" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass_lin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mimatext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mimaedit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/commitbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/welcome_background_color"
        android:gravity="center"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:layout_marginTop="20dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3" />

        <Button
            android:id="@+id/reg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/welcome_background_color"
            android:gravity="center"
            android:text="注册" />
    </LinearLayout>

</LinearLayout>